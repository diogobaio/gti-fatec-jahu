# Configurações do Banco de Dados
# Copie este arquivo para .env e preencha com suas credenciais reais
# O arquivo .env NÃO deve ser commitado no Git

DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=petmais
DB_USERNAME=root
DB_PASSWORD= ''

# Configurações gerais
APP_NAME="PetMais - Pet Shop"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost

# Segurança
# Gere uma chave aleatória para sua aplicação
APP_KEY=

# Fuso horário
TIMEZONE=America/Sao_Paulo

# Paginação
ITEMS_PER_PAGE=10